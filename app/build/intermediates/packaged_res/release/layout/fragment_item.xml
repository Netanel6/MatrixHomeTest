<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg"
    tools:context=".ui.ItemFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:civ_circle_background_color="@color/transparent_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_picture"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="250dp"
        app:civ_border_color="@color/stroke_color"
        app:civ_border_overlay="true"
        app:civ_border_width="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="230dp"
        android:background="@drawable/item_cell_bg"
        android:fontFamily="@font/assistant_semi_bold"
        android:gravity="center"
        android:textColor="@color/bg_main_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_picture" />


    <TextView
        android:id="@+id/item_desc"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/item_cell_bg"
        android:fontFamily="@font/assistant_semi_bold"
        android:gravity="center"
        android:textColor="@color/bg_main_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_cell_bg"
        android:fontFamily="@font/assistant_semi_bold"
        android:gravity="center"
        android:textColor="@color/bg_main_color"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>